{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Start Backend Server",
			"type": "shell",
			"command": "conda",
			"args": [
				"run",
				"--live-stream",
				"--name",
				"llm",
				"python",
				"app.py"
			],
			"group": "build",
			"isBackground": true,
			"problemMatcher": [],
			"options": {
				"env": {
					"DATABASE_URL": "postgresql://werewolf_user:werewolf_password@localhost:5432/werewolf_game"
				}
			}
		},
		{
			"label": "Start Frontend Dev Server",
			"type": "shell",
			"command": "npm",
			"args": ["start"],
			"options": {
				"cwd": "${workspaceFolder}/frontend",
				"env": {
					"REACT_APP_API_URL": "http://localhost:8000"
				}
			},
			"group": "build",
			"isBackground": true,
			"problemMatcher": []
		}
	]
}